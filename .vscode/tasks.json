{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Rust Extension Module",
            "type": "shell",
            "command": "${command:python.interpreterPath} setup.py build_rust --inplace ${input:buildTarget}",
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "buildTarget",
            "type": "pickString",
            "description": "Build target",
            "options": [
                "--debug",
                "--release"
            ],
            "default": "--release"
        }
    ]
}